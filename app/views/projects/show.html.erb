<h1><%=@project.title%></h1>
<h2>By: <%=link_to @project.user.name, user_path(@project.user)%> </h2>

<% if @project.user == current_user %>
<h4><%= link_to "Edit Project", edit_project_path(@project)%></h4>
<% end %>

<div><%= @project.description%></div>
<p><%= @project.due_date%></p>

<p><%= link_to 'Add a new task', new_project_task_path(@project)%></p>

<p><%= link_to 'See all tasks', project_tasks_path(@project) if !@project.tasks.empty? %></p>